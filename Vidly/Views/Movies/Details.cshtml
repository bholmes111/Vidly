@model Vidly.Models.Movie
@{
    ViewBag.Title = @Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br /><br />
<h2>@Model.Name</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Html.ValueFor(m => m.ReleaseDate, "{0:MM/dd/yyyy}")</li>
    <li>Date Added: @Html.ValueFor(m => m.DateAdded, "{0:MM/dd/yyyy}")</li>
    <li>Number In Stock: @Model.NumberInStock.ToString()</li>
</ul>